@model VAS.Dealer.Models.CRM.MailConfigModel
@{
    ViewData["Title"] = "Cấu hình email";
    ViewData["SubTitle"] = "Email gửi đến trạm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="nav-tabs-custom">
    <ul class="nav nav-tabs ui-sortable-handle">
        <li class="active"><a href="#config" data-toggle="tab">Thông số mail</a></li>
        <li><a href="#content" data-toggle="tab">Nội dung mail</a></li>
        <li class="pull-left header"><i class="ion ion-clipboard"></i> Cài đặt nhận/gửi email</li>
    </ul>
    <div class="tab-content">
        <div class="chart tab-pane active" id="config">
            <div class="row">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label>
                            Host<span class="text-red sp-host-email-helper"></span>
                        </label>
                        <input type="text" id="txtHostKH" value="@Model.Host" class="form-control input-sm" placeholder="Nhập host" />
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label>
                            Port<span class="text-red sp-port-email-helper"></span>
                        </label>
                        <input type="text" id="txtPostKH" value="@Model.Port" class="form-control input-sm" placeholder="Nhập port" />
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label>
                            Email<span class="text-red sp-email-email-helper"></span>
                        </label>
                        <input type="text" id="txtEmailKH" value="@Model.UserName" autocomplete="off" class="form-control input-sm" placeholder="Nhập email" />
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label>
                            Mật khẩu<span class="text-red sp-pw-email-helper"></span>
                        </label>
                        <input type="password" id="txtPwKH" value="@Model.Password" autocomplete="off" class="form-control input-sm" placeholder="Nhập mật khẩu email" />
                        <input type="hidden" value="@(Model.Encode ? "True" : "False")" name="encode" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label>
                            Server<span class="text-red sp-serverpop-email-helper"></span>
                        </label>
                        <input type="text" id="txtServerPop" value="@Model.Server" class="form-control input-sm" placeholder="Nhập server" />
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label>
                            Port server<span class="text-red sp-portpop-email-helper"></span>
                        </label>
                        <input type="text" id="txtPortPop" value="@Model.PortServer" class="form-control input-sm" placeholder="Nhập port server" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input id="chkSSLTLSPop" @(Model.SSLoTLS ? "checked" : "") class="styled" type="checkbox">
                        <label for="chkSSLTLSPop">SSL/TLS</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <button id="btnSave" class="btn btn-success btn-sm" type="button">
                            <i class="fa fa-save"></i>&nbsp; Lưu thông tin
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="chart tab-pane" id="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Tiêu đề</label>
                        <input type="text" id="txtMailSubject" value="@Model.MailSubject" class="form-control input-sm" placeholder="Nhập tiêu đề email" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <textarea id="editor1" name="editor1" rows="10" cols="80">@Model.MailContent</textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <button class="btn btn-success btn-sm btn-save-mail-content" data-uuid="@Model.Id" type="button">
                            <i class="fa fa-save"></i>&nbsp; Lưu cấu hình nội dung
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

